packages:  
  yum:
    make: []
    gcc-c++: []
    gcc-gfortran: []
    python34-devel: []
    atlas-sse3-devel: []
    lapack-devel: []
    libcurl-devel: []
commands:
  00_pip_upgrade:
    command: /opt/python/run/venv/bin/pip install --upgrade pip
    ignoreErrors: false
  02_install_redis:
    command: sudo yum install epel-release && sudo yum update && sudo yum install redis
  03_start_redis:
    command: sudo systemctl start redis
    ignoreErrors: false
container_commands:
  01_install_dependencies:
    command: /opt/python/run/venv/bin/pip install -r dependencies.txt
    ignoreErrors: false
  02_start_celery_worker:
    command: /opt/python/run/venv/bin/circusd --daemon circus.ini
    ignoreErrors: false
option_settings:
  "aws:elasticbeanstalk:container:python":
    WSGIPath: app.py